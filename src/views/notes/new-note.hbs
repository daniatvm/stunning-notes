<div class="col-md-4 mx-auto">
    <div class="card my-border">
        <div class="card-body">
            <h3 class="text-center mb-4">New Note</h3>
            <form action="/notes/new-note" method="POST">
                <div class="form-group">
                    <input type="text" name="title" class="form-control" autofocus placeholder="Title" maxlength="30" value={{title}}>
                </div>
                <div class="form-group">
                    <textarea name="description" class="form-control" maxlength="100"
                        placeholder="Description">{{description}}</textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-outline-primary btn-block" type="submit">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>