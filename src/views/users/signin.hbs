<div class="row">
    <div class="col-md-4 m-auto">
        <div class="card my-border">
            <div class="card-body">
                <h3 class="text-center mb-4">Account Access</h3>
                <form action="/users/signin" method="POST">
                    <div class="form-group">
                        <input type="email" name="email" placeholder="Email" autocomplete="off" class="form-control"
                            autofocus>
                    </div>
                    <div class="form-group">
                        <input type="password" name="password" placeholder="Password" class="form-control">
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-outline-primary btn-block">Sing In</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
